@model IEnumerable<Article>

@{
    ViewData["Title"] = "ShowArticle";
}

<h1>Seznam všech napsaných článků</h1>


<hr />

<div class="row">
        <form asp-action="ShowArticle" method="get">
            <div class="form-actions no-color">
                <p>
                    Najdi uživatele: <input type="text" name="Search" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-primary" /> |
                    <a class="btn btn-secondary" asp-action="ShowArticle">Zobrazit celý seznam</a>
                </p>
            </div>
        </form>
</div>

<table class="table table table-bordered table-striped table-responsive" style="width:60%">
    <thead>
        <tr>
            <th>
                Název článku
            </th>
            <th>
                Publikováno
            </th>
            <th class="d-flex justify-content-center">
                Editovat | Smazat
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Title
                </td>
                <td>
                    @if(obj.Published == true)
                    {
                        <text>Publikováno</text>
                    }
                    else
                    {
                       <text>Nepublikováno</text>
                    }
                </td>
                <td class="d-flex justify-content-center">                    
                    <a class="btn btn-dark" asp-controller="Admin" asp-action="EditArticle" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i></a>
                     | 
                    <a class="btn btn-dark" asp-controller="Admin" asp-action="DeleteArticle" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i></a>                    
                </td>
              </tr>
        }
    </tbody>
</table>


<div>
    <a class="btn btn-dark" asp-action="Index">Zpět</a>
</div>

