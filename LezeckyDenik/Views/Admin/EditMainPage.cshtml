@model MainPage
@{
    ViewData["Title"] = "Uprav hlavní stránku";
}

<form asp-controller="Admin" asp-action="SaveMainPage" method="post">
    <input name="title" type="hidden" value="@Model.Title" />
    <div class="form-group">
        <textarea id="editor" name="content" class="form-control" rows="20">
            @Model.Content
        </textarea>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Uložit</button>
    </div>
</form>

@section Scripts {        
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/Trumbowyg-main/dist/trumbowyg.js"></script>
    <script type="text/javascript" src="~/lib/Trumbowyg-main/dist/langs/cs.js"></script>

    <script>
        $('#editor').trumbowyg({
    lang: 'cs'
    });
    </script>
}



