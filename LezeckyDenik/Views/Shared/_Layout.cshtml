<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LezeckyDenik</title>
    <link rel="stylesheet" href="~/css/BootswatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LezeckyDenik.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LezeckyDenik</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    @if(User.Identity.IsAuthenticated)
    {
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">                                
        <li class="nav-item">
                <a class="nav-link" asp-controller="Overview" asp-action="Index">Přehled</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="AddRecord" asp-action="Index">Přidat záznam</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Record" asp-action="Index">List záznamů</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Global" asp-action="Index">Globalní statistiky</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Goal" asp-action="Index">Plánování cílů</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Training" asp-action="Index">Záznamy tréninků</a>
            </li>                            

            @if(User.IsInRole(Role.RoleSuperAdmin) || User.IsInRole(Role.RoleAdmin) || User.IsInRole(Role.RoleEditor))
            {               
                <ul class="navbar-nav nav justify-content-end flex-grow-1"¨class="nav-link"> 
                    <li class="nav-item my-2 my-sm-0">
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">Administrátorský panel</a>
                    </li>
                </ul>                
            }
      </ul>

    </div>
    }
    <partial name="_LoginPartial" />
  </div>
</nav>
</header>
<br />
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - LezeckyDenik - <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
