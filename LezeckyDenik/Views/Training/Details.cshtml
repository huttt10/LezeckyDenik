@model LezeckyDenik.Models.Training

@{
    ViewData["Title"] = "Detaily";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Tréninková jednotka</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Model.Date.ToString("d/M/yyyy")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Focus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Focus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsDone)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.IsDone == true)
            {
                <i class="bi bi-check-lg"></i>
            }
            else
            {
                <i class="bi bi-x-lg"></i>
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model?.Id"><i class="bi bi-pencil-square"></i></a> |
    <a class="btn btn-dark" asp-action="Index">Zpět</a>
</div>
